          "type": "boolean",
          "description": "Enable spreading of Kafka pods across nodes"
        },
        "entityTopicOperator": {
          "type": "object",
          "properties": {
            "resources": {
              "type": "object"
            }
          }
        },
        "entityUserOperator": {
          "type": "object",
          "properties": {
            "resources": {
              "type": "object"
            }
          }
