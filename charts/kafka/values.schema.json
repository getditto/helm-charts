        "rackAware": {
          "type": "boolean"
        },
        "replicas": {
          "type": "integer"
        },
        "replicationFactor": {
          "type": "integer"
        },
        "resources": {
          "type": "object"
        },
        "volumeSize": {
          "type": "string"
        },
        "zookeeper": {
          "type": "object",
          "properties": {
